# make path
export MAKE := # FILL: make path, may needed under Windows

# make flag
MAKEFLAG := -s --no-print-directory

# compile marcro
CC := # FILL: compiler

# compile flags
CCFLAG := 
OBJCCFLAG := $(CCFLAG) -c

# recursive make and clean
.PHONY: build-subdirs
build-subdirs: $(DIRS)

.PHONY: $(DIRS)
$(DIRS):
	@$(MAKE) $(MAKEFLAG) -C $@ all
	
.PHONY: clean-subdirs
clean-subdirs:
	@for dir in $(DIRS); do \
		$(MAKE) $(MAKEFLAG) -C $$dir clean; \
	done

# dependencies
%.o: %.c*
	@echo -e "\t" CC $(OBJCCFLAG) $< -o $@
	@$(CC) $(OBJCCFLAG) $< -o $@
